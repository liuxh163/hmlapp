          <view class="water-drop" wx:if="{{currentStep == 1}}"></view>
        </view>
        <view class="btn-container">
          <button class="tab-btn {{currentStep == 2?'is-active':''}}" @tap="bindTabBtnTap({{2}})">拿多少</button>
          <view class="water-drop" wx:if="{{currentStep == 2}}"></view>
